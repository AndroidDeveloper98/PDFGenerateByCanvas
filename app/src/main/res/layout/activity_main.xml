<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/idBtnGeneratePDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="2"
        android:inputType="numberSigned"
        android:hint="Enter element size"
        app:layout_constraintBottom_toTopOf="@+id/idBtnGeneratePDF"
        app:layout_constraintEnd_toEndOf="@+id/idBtnGeneratePDF"
        app:layout_constraintStart_toStartOf="@+id/idBtnGeneratePDF" />

</androidx.constraintlayout.widget.ConstraintLayout>